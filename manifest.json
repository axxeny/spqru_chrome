{
  "name": "SPQRu",
  "description": "Have the Russian language content displayed with Latin letters",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://ru.wikipedia.org/*",
        "https://*.un.org/ru/*"
      ]
    }
  ]
}
